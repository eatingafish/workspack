<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoodsMessage"
    android:orientation="vertical"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="30dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/image_message"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bacekhome"
            />
        <RadioGroup
            android:id="@+id/radiogroup_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="50dp"
            >
            <RadioButton
                android:id="@+id/radiobutton_message1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="商品"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                />
            <RadioButton
                android:id="@+id/radiobutton_message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="详情"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                />
            <RadioButton
                android:id="@+id/radiobutton_message3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="评论"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                />
        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        >
    </FrameLayout>

</RelativeLayout>