<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        >
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="36dp"
            android:src="@drawable/login_icon_phone_n_hdpi"
            />
        <EditText
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:inputType="number"
            android:textColor="#fff"
            android:layout_toRightOf="@id/iv_phone"
            android:layout_marginLeft="20dp"
            android:textColorHint="#ffffff"
            android:layout_centerVertical="true"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_below="@id/iv_phone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        >
        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="36dp"
            android:src="@drawable/login_icon_lock_n_hdpi"
            />
        <EditText
            android:id="@+id/tv_passward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:layout_toRightOf="@id/iv_lock"
            android:layout_marginLeft="20dp"
            android:textColorHint="#ffffff"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:background="@null"
            />
        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/login_icon_eye_n_hdhpi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_below="@id/iv_lock"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"/>
    </RelativeLayout>
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <CheckBox
            android:id="@+id/check_remanber"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/check_change"
            android:layout_marginLeft="36dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:button="@null"
            android:checked="true"
            />
        <TextView
            android:id="@+id/tv_remanber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/check_remanber"
            android:text="记住密码"/>

        <TextView
            android:id="@+id/tv_kszhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="快速注册"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/but_login"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:text="登录"
            android:textSize="18sp"
            android:textColor="#ff5f71"
            android:background="@drawable/button_style"
            android:layout_centerInParent="true"
            android:layout_marginBottom="120dp"
            />
    </RelativeLayout>


</LinearLayout>