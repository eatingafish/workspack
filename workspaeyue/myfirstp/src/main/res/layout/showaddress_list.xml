<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/item_shape"
    android:orientation="vertical">

    <!-- 主页面 -->
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="李小二"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/show_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="13520965296"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TextView
            android:id="@+id/show_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="哈哈哈好好好好好好哈哈哈哈哈哈好好"
            android:textColor="#666666"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/show_content"
            android:layout_marginTop="10dp"
            android:background="#f6f6f6">
        </View>

        <RadioButton
            android:id="@+id/show_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_radio"
            android:button="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="DIN Alternate"
            android:text="设为默认地址"
            android:textColor="#666666"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/mrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/show_butupdate"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/address"
                android:text="修改"
                android:textColor="#666666"
                android:textSize="10sp" />

            <Button
                android:id="@+id/show_butdelete"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/show_butupdate"
                android:background="@drawable/address"
                android:text="删除"
                android:textColor="#666666"
                android:textSize="10sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>