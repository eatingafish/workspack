<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="订单号"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ordernum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="2019/1/12"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/oderrecy2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="共"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/odernum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#ff0606"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件商品，需付款"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/oderprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="#ff0606"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="元"
            android:textColor="#666666"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/odercancel"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:text="取消订单"
            android:background="#6666"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/oderpay"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:text="确定支付"
            android:textColor="#fff"
            android:textSize="15sp"
            android:background="@drawable/address_bg"/>
    </RelativeLayout>
</LinearLayout>